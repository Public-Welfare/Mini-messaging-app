<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/new">New message</a>
    <ul>
       <% messages.forEach((msg,index) => { %>
      <li>
        <strong><%= msg.user %>:</strong> <%= msg.text %>
        <!-- the added.toLocaleString() make date into a readable format -->
        <br><small><%= msg.added.toLocaleString() %></small>
        <br><a href="/message/<%= index %>">Open</a>
      </li>
    <% }); %>
    </ul>
</body>
</html>